mixin counter(categories = {})
  -
    var minus = '-'
    var plus = '+'
  ul(class='counter')

    each val, index in categories
      li(class='counter-category')
        p(class='counter-category__name', data-type=val.type)=val.diasplayName
        div(class='count-wrapper')
          button(class='count count_decrem', data-min=val.minCnt)=minus
          span(class='count__value')=val.defaultCnt
          button(class='count count_increm', data-max=val.maxCnt)=plus

mixin counter(options)
  if !options
    - options = {}
  -
    var categories = options
    var minus = '-'
    var plus = '+'
  ul(class='counter')
    each val in categories
      li(class='counter-category')
        p(class='counter-category__name')=val
        div(class='count')
          a(class='count__minus')=minus
          span(class='count__value') 0
          a(class='count__plus')=plus
    else
      li There are no values
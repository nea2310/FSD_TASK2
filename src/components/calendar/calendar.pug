include ../../components/input/input.pug
include ../../components/action/action.pug
include ../../components/label/label.pug
mixin calendar(options={})
	div(class='calendar-wrapper')
		if options.label_required
			+label({label: options.label, margins: options.margins})
		if (options.type=='date_from')
			+input({type: 'calendar',input_type: 'datepicker-start', icon: 'tip', length: 'short', text: 'ДД.ММ.ГГГГ', readonly: 'readonly'})
		else if(options.type=='date_to')
			+input({type: 'calendar',input_type: 'datepicker-end', icon: 'tip', length: 'short', text: 'ДД.ММ.ГГГГ', readonly: 'readonly'})
		else if(options.type=='datefilter')
			+input({type: 'calendar',input_type: 'calendar', icon: 'tip', length: 'medium', readonly: 'readonly'})
		else if(options.type=='datefilter-range')
			+input({type: 'calendar', input_type: 'datepicker-range', icon: 'tip', length: 'medium', text: 'ДД.ММ.ГГГГ', readonly: 'readonly'})
		else if (options.type=='datefilter-visible')
			+input({type: 'calendar', input_type: 'datepicker-visible', length: 'medium', readonly: 'readonly'})

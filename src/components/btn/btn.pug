include ../../components/arrow/arrow.pug
mixin button(options)
  if !options
    - options = {}
  -
    var classes = ''
    classes += options.backgroundcolor ? ' btn-' + options.backgroundcolor : ''
    classes += options.length ? ' btn-' + options.length : ''
    classes += options.isplain ? ' btn-' + options.isplain : ''
    classes += options.color ? ' btn-' + options.color : ''
  div.btn(class=classes)(
    href = options.href || "/mock-address/change-me"
  )= options.text || 'Button'
    if options.arrow
      div(class="arrow-wrapper")
        +arrow()
block serv
	-var serv
	+logo-grey()
	div(class="formelements__wrapper")
		div(class="formelements__col-wrapper")
			div(class='formelements__col')
				div(class='formelements__card ')
					+input({label_required: true, label: 'text field', type: 'plaintext', length: 'long', text: 'E-mail', margins: 'margin-bottom: 1px'})
				div(class='formelements__card')
					+input({label_required: true, label: 'masked text field', type: 'maskedtext', length: 'long', text: 'ДД.ММ.ГГГГ.', margins: 'margin-bottom: 1px'})
				div(class='formelements__card')
					+calendarblock({label_datefrom: 'date dropdown', label_dateto: 'date dropdown', margins: 'margin-bottom: 1px'})
				div(class='formelements__card')
					+calendar({label_required: true, label: 'filter date dropdown', type: 'datefilter-range', margins: 'margin-bottom: 1px'})
				div(class='formelements__card')
					+input({label_required: true, label: 'subscription text field', type: 'plaintext', icon: 'arrow', length: 'medium', text: 'E-mail', margins: 'margin-bottom: 1px'})
				div(class='formelements__card')
					+dropdown({width: 'narrow'}, {'спальни': '2', 'кровати': '2', 'ванные комнаты': '1'}, {text: '2 спальни, 2 кровати...', label_required: true, label: 'dropdown', margins: 'margin-bottom: 1px'})
				div(class='formelements__card')
					+checklist_expand({label: 'expandable checkbox list'}, ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь',])
				div(class='formelements__card')
					+feature({icon: 'mood', headertext: 'Комфорт', bodytext: 'Шумопоглащающие стены',})
				div(class='formelements__card')
					+feature({icon: 'location_city', headertext: 'Удобство', bodytext: 'Окно в каждой из спален',})
			div(class='formelements__col')
				div(class='formelements__card' style="margin-bottom: 11px")
					+checklist({label_required: true, label: 'checkbox buttons', margins: 'margin-bottom: 17px'}, ['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)'])
				div(class='formelements__card'  style="margin-bottom: 11px")
					+label({label: 'radio buttons', margins: 'margin-bottom: 15px'})
					+radioblock({name:'radioblock'}, [{value: '1', id: '1', labeltext: 'Мужчина', checked: 'checked'}, {value: '2', id: '2', labeltext: 'Женщина'}])
				div(class='formelements__card' style="margin-bottom: 52px")
					+label({label: 'toggle', margins: 'margin-bottom: 15px'})
					+toggle({labeltext: 'Получать спецпредложения'})
				div(class='formelements__card' style="margin-bottom: 22px")
					+label({label: 'like button', margins: 'margin-bottom: 15px'})
					+buttonlike()
				div(class='formelements__card' style="margin-bottom: 175px")
					+label({label: 'rate button'})
					+starrating()
				div(class='formelements__card' style="margin-bottom: 237px")
					+dropdown({width: 'wide', buttons: true}, {'взрослые': '0', 'дети': '0', 'младенцы': '0',}, {text: 'Сколько гостей', label_required: true, label: 'dropdown', margins: 'margin-bottom: -1px'})
				div(class='formelements__card')
					+checklist_rich({label_required: true, label: 'rich checkbox buttons', margins: 'margin-bottom: 17px'}, {'Широкий коридор': 'Ширина коридора в номере не менее 91 см.', 'Помощник для инвалидов': 'На 1 этаже вас встретит специалист и проводит до номера.',})
			div(class='formelements__col')
				div(class='formelements__card')
					+rangeslider({label: 'range slider'})
				div(class='formelements__card')
					+label({label: 'buttons'})
					+button({length: 'short', width: 'wide', backgroundcolor: 'purple', text: 'click me'})
				div(class='formelements__card')
					+button({length: 'short', width: 'wide', backgroundcolor: 'white', text: 'click me'})
				div(class='formelements__card formelements__card-1')
					+action({text: 'click me', textcolor: 'purple'})
					+action({text: 'click me', textcolor: 'grey'})
				div(class='formelements__card')
					+button({length: 'long', width: 'wide', backgroundcolor: 'purple', icon: 'arrow', text: 'перейти к оплате'})
				div(class='formelements__card')
					+label({label: 'pagination'})
					+pagination()
				div(class='formelements__card')
					+bulletlist({label: 'bullet list'}, ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия - после 13:00, а выезд - до 12:00',])
		div(class="col__wrapper")
			div(class='formelements__col')
				div(class='formelements__card')
					+feedback({imgpath: 'images/murad.svg', name: 'Мурад Сарафанов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий.        И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})

